  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist",
    "baseUrl": "./src/",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules", "dist"
  ]
}